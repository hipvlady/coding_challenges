   "source": [
    "def repeating_heads(n, x):\n",
    "    prob = (1 - (1 - 0.5**n)**x)\n",
    "    payout = 100 / prob\n",
    "    return [round(prob * 100, 4), round(payout, 4)]"
   ]
  },
